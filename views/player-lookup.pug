html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Trivia
        link(rel='stylesheet', href='/stylesheets/home.css')
        script(src='/javascripts/navbar.js' defer)
    body
        header
            include navbar.pug

        form(action="/player-stats/players", method="get") 
            label(for="firstname") Enter First Name: 
            input(type="text", name="firstname", id="firstname")
            br
            label(for="lastname") Enter Last Name: 
            input(type="text", name="lastname", id="lastname")
            br
            label(for="year") Enter Year:      
            input(type="number", min= 2015, max= 2022, name="year", id="year")
            br
            input(type="submit", value="Submit")
            
            
        
                   